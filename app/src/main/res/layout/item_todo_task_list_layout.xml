<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_todo_task_list_container"
    android:layout_marginVertical="16dp"
    >

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/todoItemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="20dp"
        app:buttonTint="#DFBD43"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/todoItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintStart_toEndOf="@+id/todoItemCheckBox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/todoItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to church"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/todoItemCheckBox"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/todoItemTime"
        android:layout_marginTop="17dp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/todoItemEditBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/edit_note_24px"
        android:tint="#DFBD43"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/todoItemDeleteBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/delete_24px"
        app:layout_constraintTop_toBottomOf="@id/todoItemEditBtn"
        app:layout_constraintEnd_toEndOf="@id/todoItemEditBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="#DFBD43"
        />
</androidx.constraintlayout.widget.ConstraintLayout>